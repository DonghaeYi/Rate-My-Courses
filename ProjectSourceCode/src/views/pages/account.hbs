<div class="container" >
  {{!-- Display the username --}}
  <h1 class="display-4">{{username}}'s Reviews</h1>  

  {{!-- If there are reviews, display reviews --}}
  {{#if reviews.length}}
    <div id="review-container" class="container">
      {{> sort start_selected="Year"}}
      {{#each reviews}}
        <div id="review{{this.review_id}}" class="container border border-dark">
          <h3>{{this.course_tag}} {{this.course_id}}: {{this.course_name}}</h3>
          
          <h5>Review from {{term_taken}} {{year_taken}}:</h5>

          <table class="table">
            <tr>
              <td scope="col">Overall: {{this.overall_rating}}/10</td>
              <td scope="col">Homework: {{this.homework_rating}}/10</td>
              <td scope="col">Enjoyability: {{this.enjoyability_rating}}/10</td>
              <td scope="col">Usefulness: {{this.usefulness_rating}}/10</td>
              <td scope="col">Difficulty: {{this.difficulty_rating}}/10</td>
              <td></td>
              <td>
                <form method="POST", action="/deleteReview?_method=DELETE" mode="cors">
                  <input type="hidden" id="review_id" name="review_id" value="{{this.review_id}}">
                  <input type="hidden" id="user_id" name="user_id" value="{{this.user_id}}">
                  <button type="submit" class="btn btn-sm btn-primary" style="padding: 7px 10px; margin: 4px 0; border: none; cursor: pointer; width: 75%;">Delete Review</button>
                </form>
                <form method="get" action="/review">
                  <input type="hidden" name="updating" value="true">
                  <input type="hidden" name="review_id" value="{{review_id}}">
                  <button type="submit" class="btn btn-sm btn-primary" style="padding: 7px 10px; margin: 4px 0; border: none; cursor: pointer; width: 75%;">Update Review</button>
                </form>
              </td>
            </tr>
          </table>
          
          <h6>{{this.review}}</h6>
        </div>
      {{/each}}
    </div>
    
  {{!-- There are no reviews by this user --}}
  {{else}}
    <div class="container">
      <p>No reviews found.</p>
    </div>
  {{/if}}
</div>
